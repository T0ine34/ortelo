        "DATA":{
            "type" : "event",
            "payload": [
                {
                    "name": "timestamp",
                    "type": "number"
                },
                {
                    "name": "data",
                    "type": "object"
                }
            ],
            "server_to_client": true,
            "client_to_server": true,
            "description": "Game data sent by the server to the client or by the client to the server. (the content will depend on the game)"
        }
    },
    "GAMES_MENU": {
        "type": "namespace",
